<h2>Log In Here</h2>

<% if @errors %>
<%= render '/errors' %>
<% end %>

<%= form_for '/login' do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Log in!" %>
  </p>
<% end %>